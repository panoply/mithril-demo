{
  "name": "@mpnpm/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "API backend for my app to consume",
  "main": "dist/index.mjs",
  "scripts": {
    "build": "rollup -c --environment prod",
    "dev": "miniflare ./dist/index.mjs --watch --debug --port 8000",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jestconfig.json --verbose"
  },
  "author": "Joseph Curtis",
  "license": "MIT OR Apache-2.0",
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^17.0.16",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "dotenv": "^16.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.0.1",
    "jest-environment-miniflare": "^2.3.0",
    "miniflare": "^2.3.0",
    "prettier": "^2.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "@types/jest": "^27.0.1"
  }
}
